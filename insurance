create database 1bm21cs040_insurance;
show databases;
use 1bm21cs040_insurance;

show tables;

create table person1
(
driver_id varchar(10),
name varchar(40),
address varchar(40),
primary key(driver_id));

create table car
( reg_no varchar(10),
model varchar(15),
year int,
primary key(reg_no));

create table owns1
(driver_id varchar(10),
reg_no varchar(10),
primary key(driver_id,reg_no),
foreign key(driver_id) references person1(driver_id) on delete cascade,
foreign key(reg_no) references car(reg_no) on delete cascade);

create table accident
(
report_num int,
accident_date varchar(10),
location varchar(20),
primary key(report_num));

create table participated
(
driver_id varchar(10),
reg_no varchar(10),
report_num int,
damage_amount int,
primary key(driver_id,reg_no,report_num),
foreign key(driver_id) references person1(driver_id) on delete cascade,
foreign key(reg_no) references car(reg_no) on delete cascade,
foreign key(report_num) references accident(report_num) on delete cascade);

